  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
<script type="text/javascript">
  
  function seleccionarEmpresa(valor){
    if($("#check"+valor).is(':checked')){
      $("#check"+valor).prop('checked', false);
          var styles = {
            backgroundColor : "#fff",
            color: "#000"
          };
        $( "#li" + valor ).css( styles );
    }
    else{
      $("#check"+valor).prop('checked', true);
          var styles = {
            backgroundColor : "#428bca",
            color: "#fff"
          };
        $( "#li" + valor ).css( styles );
    }
  }

</script>


<div class="py-5">
    <div class="container">
    
    <h3>Elija las empresas a evaluar:</h3>
    
      <div class="row">
        <div class="col-md-12">
          <ul class="list-group">
<form action="/metodologias" method="POST">
		{{#each empresas }}
            <a onclick='seleccionarEmpresa("{{nombre}}")'>
            <li class="list-group-item" id="li{{nombre}}">
              <input style="display:none" type="checkbox" id="check{{nombre}}"  name="check{{nombre}}"> {{nombre}} </li>
            </a>
            
         {{/each}}

          </ul>
          

          <div class="container" style="margin-top:1em;">
      <div class="row">
        <div class="col-md-6">
          <div class="btn-group">
            
			<select class="form-control" name="metodologia">
			{{#each metodologias}}
      			<option value="{{id}}">{{nombre}}</option>      			
      		{{/each}}
    		</select>

          </div>
        </div>
        <div class="col-md-6" align=RIGHT>
          
           <input type="submit" value="Evaluar metodologia" class="btn btn-primary" align=RIGHT>
           </form>
        </div>
      </div>
    </div>
    
    
    <div class="alert alert-danger my-3 {{clase}}" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">Ã—</span> </button>
      <h4 class="alert-heading">No selecciono ninguna empresa</h4>
    </div>
    
    
    
    
